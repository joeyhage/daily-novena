{
  "name": "daily-novena",
  "displayName": "Daily Novena",
  "description": "Read more Novenas",
  "version": "0.0.6",
  "author": {
    "name": "Joey Hage",
    "url": "https://github.com/joeyhage"
  },
  "publisher": "joeyhage",
  "icon": "icon.jpeg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joeyhage/daily-novena"
  },
  "bugs": {
    "url": "https://github.com/joeyhage/daily-novena/issues"
  },
  "homepage": "https://github.com/joeyhage/daily-novena",
  "engines": {
    "vscode": "^1.61.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "novena",
    "pray",
    "christianity"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:dailyNovena.pray",
    "onCommand:dailyNovena.chooseNovena",
    "onCommand:dailyNovena.changeNovenaDay"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "untrustedWorkspaces": {
      "supported": false
    },
    "commands": [
      {
        "command": "dailyNovena.pray",
        "category": "Novena",
        "title": "Pray"
      },
      {
        "command": "dailyNovena.chooseNovena",
        "category": "Novena",
        "title": "Choose"
      },
      {
        "command": "dailyNovena.changeNovenaDay",
        "category": "Novena",
        "title": "Change day"
      }
    ],
    "configuration": {
      "title": "Daily Novena",
      "properties": {
        "dailyNovena.logLevel": {
          "type": "string",
          "scope": "application",
          "description": "Set the Debug Level for logging messages.",
          "enum": [
            "none",
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "error",
          "enumDescriptions": [
            "Do not log",
            "Log only errors",
            "Log errors and warnings",
            "Log errors, warnings, and info",
            "Log everything (noisy)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "mocha './out/test/*.test.js'",
    "premocha": "npm run pretest",
    "mocha": "mocha",
    "prevscodetest": "npm run compile && npm run lint",
    "vscodetest": "node ./out/test/runTest.js",
    "update": "npx npm-check-updates -u --target minor"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.29",
    "@types/node-fetch": "^2.5.12",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vscode/test-electron": "^1.6.2",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "testdouble": "^3.16.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "htmlparser2": "^7.1.2",
    "node-fetch": "^2.6.5"
  }
}
